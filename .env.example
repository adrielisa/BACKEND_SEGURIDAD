# Servidor
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Base de datos PostgreSQL (Railway)
# Opción 1: URL completa de Railway
DATABASE_URL=postgresql://usuario:password@host:puerto/database

# Opción 2: Variables separadas (si prefieres no usar DATABASE_URL)
# DB_HOST=containers-us-west-xxx.railway.app
# DB_PORT=5432
# DB_NAME=railway
# DB_USER=postgres
# DB_PASSWORD=tu_password_railway

# CORS - Agrega tu dominio de frontend
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=info

# Seguridad
# Cooldown entre registros (en segundos)
COOLDOWN_TIME=30

# Tiempo de bloqueo por ataque detectado (en minutos)
ATTACK_BLOCK_TIME=15

# Rate limiting general
RATE_LIMIT_WINDOW_MS=10000
RATE_LIMIT_MAX_REQUESTS=5
